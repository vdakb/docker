<?xml version="1.0" encoding="US-ASCII"?>
<project name        ="Identity Governance Service Preferences"
         basedir     =".."
         default     ="make"
         xmlns:jps   ="http://oracle.hst.deployment/security"
         xmlns:server="http://oracle.hst.deployment/topology">
  <!--
  =====================================================================
  == properties specific to this project
  =====================================================================
  -->
  <property name="description" value="Access Service Module"/>
  <property name="application" value="oracle.iam.access.fish"/>
  <property name="module"      value="${application}"/>
  <property name="package"     value="oracle/**/*.*"/>
  <!--
  =====================================================================
  == properties globaly defined
  =====================================================================
  -->
  <import   file="../../pgs-targets.xml"/>
  <!--
  =====================================================================
  == accomplish a possible customization runtime path
  =====================================================================
  -->
  <path id="oracle.ocs.runtime">
  <!--
    <path refid="oracle.ocs.iad.core"/>
  -->
  </path>
  <!--
  =====================================================================
  == accomplish the build path of the project
  =====================================================================
  -->
  <path id="classpath">
    <path refid="oracle.fmw.jee"/>
    <path refid="oracle.fmw.cdi"/>
    <path refid="oracle.fmw.jps"/>
    <!--
    <path refid="oracle.fmw.jpa"/>
    <path refid="oracle.fmw.jdbc"/>
    <path refid="oracle.fmw.json"/>
    <path refid="oracle.fmw.jax.jackson"/>
    <path refid="oracle.fmw.jax.jersey.core"/>
    -->
    <path refid="glassfish.jmx.core"/>
    <path refid="glassfish.jps.core"/>
    <path refid="glassfish.jps.authn"/>
    <path refid="glassfish.jax.jersey"/>
    <!--
    <path refid="oracle.ocs.hst.core"/>
    <path refid="oracle.ocs.hst.jps"/>
    <path refid="oracle.ocs.iad.authn"/>
    <path refid="oracle.ocs.runtime"/>
    -->
  </path>
  <!--
  =====================================================================
  == ANT target take the application out of service
  =====================================================================
  -->
  <target name="stop">
    <ogs-war-stop application="${application}" target="${ppa.server.name}"/>
  </target>
  <!--
  =====================================================================
  == ANT target put the application in service
  =====================================================================
  -->
  <target name="start">
    <ogs-war-start application="${application}" target="${ppa.server.name}"/>
  </target>
  <!--
  =====================================================================
  == ANT target to deploy the service application the JEE application
  == server
  =====================================================================
  -->
  <target name="deploy" depends="make">
    <ogs-war-deploy application="${application}" target="${ppa.server.name}"/>
  </target>
  <!--
  =====================================================================
  == ANT target to redeploy the service application the JEE application
  == server
  =====================================================================
  -->
  <target name="redeploy" depends="make">
    <ogs-war-redeploy application="${application}" target="${ppa.server.name}"/>
  </target>
  <!--
  =====================================================================
  == ANT target to undeploy the service application the JEE application
  == server
  =====================================================================
  -->
  <target name="undeploy">
    <ogs-war-undeploy application="${application}"/>
  </target>
</project>