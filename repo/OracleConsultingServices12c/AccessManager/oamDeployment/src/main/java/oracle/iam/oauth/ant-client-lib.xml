<antlib xmlns:object="http://oracle.iam.oauth/client">
  <!--
  ==============================================================================
  == Register Custom Types within Ant
  ==============================================================================
  -->
  <typedef name="grant"     classname="oracle.iam.oauth.client.type.Grant"/>
  <typedef name="scope"     classname="oracle.iam.oauth.client.type.Scope"/>
  <typedef name="redirect"  classname="oracle.iam.oauth.client.type.Redirect"/>
  <typedef name="domain"    classname="oracle.iam.oauth.client.type.Domain"/>
  <typedef name="attribute" classname="oracle.iam.oauth.client.type.Attribute"/>
  <typedef name="parameter" classname="oracle.iam.oauth.client.type.Parameter"/>
  <typedef name="instance"  classname="oracle.iam.oauth.client.type.Instance"/>
  <!--
  ==============================================================================
  == Register Custom Tasks within Ant
  ==============================================================================
  -->
  <taskdef name="create"    classname="oracle.iam.oauth.client.task.Create"/>
  <taskdef name="modify"    classname="oracle.iam.oauth.client.task.Modify"/>
  <taskdef name="delete"    classname="oracle.iam.oauth.client.task.Delete"/>
  <taskdef name="report"    classname="oracle.iam.oauth.client.task.Report"/>
</antlib>