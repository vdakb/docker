<?xml version="1.0" encoding="US-ASCII"?>
<project name="Access Manager Target Preferences" default="all" basedir="..">
  <!--
  =====================================================================
  == properties specific to this project
  =====================================================================
  -->
  <property name="description"   value="Identity Assertion Inventory Service"/>
  <property name="application"   value="oracle.iam.human.capital.service"/>
  <property name="thirdparty"    value="${application}"/>
  <property name="package.names" value="oracle.*"/>
  <property name="destination"   value="../../deployment/oam/0000 systemCustomization"/>
  <!--
  =====================================================================
  == properties globaly defined
  =====================================================================
  -->
  <import file="../../oam-targets.xml"/>
  <!--
  =====================================================================
  == the deployment descriptors of this plugin project
  =====================================================================
  -->
  <patternset id="descriptor.pattern.base">
    <include name="*.xml"/>
  </patternset>
  <patternset id="descriptor.pattern.plugin">
    <include name="plugin/*.xml"/>
  </patternset>
  <!--
  =====================================================================
  == accomplish a possible plugin runtime path
  =====================================================================
  -->
  <path id="oracle.ocs.iam.runtime">
  </path>
  <!--
  =====================================================================
  == accomplish the build path of the project
  =====================================================================
  -->
  <path id="classpath">
    <path refid="oracle.fmw.jee"/>
    <path refid="oracle.fmw.jax.jackson"/>
    <path refid="oracle.fmw.jax.jersey.core"/>
    <path refid="oracle.ocs.iam.runtime"/>
  </path>
  <!--
  =====================================================================
  == ANT target to assemble the web application to be deployed on the
  == JEE application server
  =====================================================================
  -->
  <target name="make" description="Package the project source and documentation" depends="clean,init,copy,compile,manifest">
    <jee-war-module description="${description}" module="${application}" package="${package}" destination="${destination}"/>
  </target>
  <!--
  =====================================================================
  == ANT target to deploy the service application the JEE application
  == server
  =====================================================================
  -->
  <target name="deploy" depends="make">
    <echo message="Deploying Human Cappital Service Application ${application} from path ${output.dir} and ${static.dir}"/>
    <jee-war-deploy application="${application}" target="ppa"/>
  </target>
  <!--
  =====================================================================
  == ANT target to undeploy the service application the JEE application
  == server
  =====================================================================
  -->
  <target name="undeploy">
    <jee-war-undeploy application="${application}"/>
  </target>
</project>