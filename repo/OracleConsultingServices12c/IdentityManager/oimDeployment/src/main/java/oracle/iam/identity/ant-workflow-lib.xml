<antlib xmlns:object="http://oracle.iam.identity/workflow">
  <!--
  ==============================================================================
  == Register Custom Types within Ant
  ==============================================================================
  -->
  <typedef name="composite" classname="oracle.iam.identity.workflow.type.Composite"/>
  <typedef name="task"      classname="oracle.iam.identity.workflow.type.Composite$Task"/>
  <typedef name="flow"      classname="oracle.iam.identity.workflow.type.Composite$Flow"/>
  <typedef name="workflow"  classname="oracle.iam.identity.workflow.type.Workflow"/>
  <typedef name="category"  classname="oracle.iam.identity.workflow.type.Category"/>
  <typedef name="provider"  classname="oracle.iam.identity.workflow.type.Provider"/>
  <typedef name="partition" classname="oracle.iam.identity.workflow.type.Partition"/>
  <typedef name="operation" classname="oracle.iam.identity.workflow.type.Partition$Operation"/>
  <!--
  ==============================================================================
  == Register Custom Tasks within Ant
  ==============================================================================
  -->
  <taskdef name="deploy"    classname="oracle.iam.identity.workflow.task.Deploy"/>
  <taskdef name="undeploy"  classname="oracle.iam.identity.workflow.task.Undeploy"/>
  <taskdef name="redeploy"  classname="oracle.iam.identity.workflow.task.Redeploy"/>
  <taskdef name="register"  classname="oracle.iam.identity.workflow.task.Register"/>
  <taskdef name="enable"    classname="oracle.iam.identity.workflow.task.Enable"/>
  <taskdef name="disable"   classname="oracle.iam.identity.workflow.task.Disable"/>
  <taskdef name="configure" classname="oracle.iam.identity.workflow.task.Configure"/>
  <taskdef name="inventory" classname="oracle.iam.identity.workflow.task.Inventory"/>
  <taskdef name="manager"   classname="oracle.iam.identity.workflow.task.PartitionManager"/>
</antlib>