<antlib xmlns:server="http://oracle.hst.deployment/security">
  <!--
  ==============================================================================
  == Register Custom Types within Ant
  ==============================================================================
  -->
  <typedef name="action"            classname="oracle.hst.deployment.jps.type.Action"/>
  <typedef name="alias"             classname="oracle.hst.deployment.jps.type.Alias"/>
  <typedef name="credential"        classname="oracle.hst.deployment.jps.type.Credential"/>
  <typedef name="policy"            classname="oracle.hst.deployment.jps.type.ApplicationPolicy"/>
  <typedef name="permission"        classname="oracle.hst.deployment.jps.type.Permission"/>
  <typedef name="grant"             classname="oracle.hst.deployment.jps.type.Permission$Assign"/>
  <typedef name="revoke"            classname="oracle.hst.deployment.jps.type.Permission$Remove"/>
  <typedef name="assign"            classname="oracle.hst.deployment.jps.type.Member$Assign"/>
  <typedef name="remove"            classname="oracle.hst.deployment.jps.type.Member$Remove"/>
  <typedef name="codebase"          classname="oracle.hst.deployment.jps.type.Principal$Codebase"/>
  <typedef name="enterpriserole"    classname="oracle.hst.deployment.jps.type.Principal$EnterpriseRole"/>
  <typedef name="enterpriseuser"    classname="oracle.hst.deployment.jps.type.Principal$EnterpriseUser"/>
  <typedef name="applicationrole"   classname="oracle.hst.deployment.jps.type.Principal$ApplicationRole"/>
  <!--
  ==============================================================================
  == Register Custom Tasks within Ant
  ==============================================================================
  -->
  <taskdef name="systemstore"       classname="oracle.hst.deployment.jps.task.GlobalPolicyStore"/>
  <taskdef name="credentialstore"   classname="oracle.hst.deployment.jps.task.CredentialStore"/>
  <taskdef name="applicationstore"  classname="oracle.hst.deployment.jps.task.ApplicationPolicyStore"/>
</antlib>