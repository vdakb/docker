<?xml version="1.0" encoding="US-ASCII"?>
<project name="Oracle Headstart Foundation" default="all" basedir="..">
  <!--
  =====================================================================
  == properties specific to this project
  =====================================================================
  -->
  <property name="description"         value="Oracle Headstart Faces"/>
  <property name="application"         value="hst-faces"/>
  <property name="library"             value="${application}"/>

  <property name="destination.base"    value="./"/>

  <property name="packagepath.library" value="oracle/**/*.class **/*.properties **/*.index **/*.xsd META-INF/*"/>
  <!--
  =====================================================================
  == properties globaly defined
  =====================================================================
  -->
  <import file="../../hst-targets.xml"/>
  <!--
  =====================================================================
  == accomplish the build path of the project
  =====================================================================
  -->
  <path id="classpath">
    <path refid="oracle.fmw.jee"/>
    <path refid="oracle.fmw.jrf"/>
    <path refid="oracle.fmw.xml"/>
    <path refid="oracle.fmw.jsf"/>
    <path refid="oracle.fmw.adf.view"/>
    <path refid="oracle.fmw.adf.model"/>
    <path refid="oracle.fmw.adf.platform"/>
    <path refid="oracle.fmw.adf.controller"/>
    <path refid="oracle.ocs.hst.foundation"/>
  </path>
</project>