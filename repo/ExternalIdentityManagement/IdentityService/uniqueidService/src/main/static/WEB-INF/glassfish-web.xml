<!DOCTYPE glassfish-web-app PUBLIC "-//GlassFish.org//DTD GlassFish Application Server 3.1 Servlet 3.0//EN" "http://glassfish.org/dtds/glassfish-web-app_3_0-1.dtd">
<glassfish-web-app>
  <context-root>/igs/uid</context-root>
  <security-role-mapping>
    <role-name>viewer</role-name>
    <group-name>authenticated-user</group-name>
  </security-role-mapping>
  <security-role-mapping>
    <role-name>register</role-name>
    <group-name>uid.register</group-name>
  </security-role-mapping>
  <security-role-mapping>
    <role-name>generate</role-name>
    <group-name>uid.generate</group-name>
  </security-role-mapping>
  <security-role-mapping>
    <role-name>administrator</role-name>
    <group-name>uid.admin</group-name>
  </security-role-mapping>
</glassfish-web-app>