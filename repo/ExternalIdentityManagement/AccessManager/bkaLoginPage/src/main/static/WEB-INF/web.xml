<?xml version="1.0" encoding="US-ASCII"?>
<web-app xmlns             ="http://java.sun.com/xml/ns/javaee" version="3.0"
         xmlns:xsi         ="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <mime-mapping>
    <extension>png</extension>
    <mime-type>image/png</mime-type>
  </mime-mapping>
  <mime-mapping>
    <extension>gif</extension>
    <mime-type>image/gif</mime-type>
  </mime-mapping>
  <mime-mapping>
    <extension>swf</extension>
    <mime-type>application/x-shockwave-flash</mime-type>
  </mime-mapping>
  <mime-mapping>
    <extension>js</extension>
    <mime-type>application/javascript</mime-type>
  </mime-mapping>
  <mime-mapping>
    <extension>woff</extension>
    <mime-type>application/x-font-woff</mime-type>
  </mime-mapping>
  <servlet>
    <servlet-name>signin</servlet-name>
    <jsp-file>/WEB-INF/pages/signin.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>signout</servlet-name>
    <jsp-file>/WEB-INF/pages/signout.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>forgot-password</servlet-name>
    <jsp-file>/WEB-INF/pages/forgot-password.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>p20signin</servlet-name>
    <jsp-file>/WEB-INF/pages/p20signin.jsp</jsp-file>
  </servlet>
  <servlet>
    <servlet-name>p20signout</servlet-name>
    <jsp-file>/WEB-INF/pages/p20signout.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>signin</servlet-name>
    <url-pattern>/signin</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>signout</servlet-name>
    <url-pattern>/signout</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>forgot-password</servlet-name>
    <url-pattern>/forgot-password</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>p20signin</servlet-name>
    <url-pattern>/p20signin</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>p20signout</servlet-name>
    <url-pattern>/p20signout</url-pattern>
  </servlet-mapping>
	<servlet>
    <servlet-name>consent</servlet-name>
    <jsp-file>/WEB-INF/pages/consent.jsp</jsp-file>
		<init-param>
      <param-name>AUTO_APPROVAL</param-name>
      <param-value>true</param-value>
   </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>consent</servlet-name>
    <url-pattern>/consent</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>/signin</welcome-file>
  </welcome-file-list>
  <listener>
    <listener-class>bka.iam.platform.ContextLoader</listener-class>
  </listener>
</web-app>