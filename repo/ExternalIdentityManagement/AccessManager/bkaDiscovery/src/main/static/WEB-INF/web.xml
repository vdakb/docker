<?xml version="1.0" encoding="US-ASCII"?>
<web-app xmlns             ="http://java.sun.com/xml/ns/javaee" version="3.0"
         xmlns:xsi         ="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <mime-mapping>
    <extension>png</extension>
    <mime-type>image/png</mime-type>
  </mime-mapping>
  <mime-mapping>
    <extension>gif</extension>
    <mime-type>image/gif</mime-type>
  </mime-mapping>
  <mime-mapping>
    <extension>js</extension>
    <mime-type>application/javascript</mime-type>
  </mime-mapping>
  <mime-mapping>
    <extension>woff</extension>
    <mime-type>application/x-font-woff</mime-type>
  </mime-mapping>
  <servlet>
    <servlet-name>idp</servlet-name>
    <jsp-file>/WEB-INF/pages/discovery.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>idp</servlet-name>
    <url-pattern>/which</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>multi</servlet-name>
    <jsp-file>/WEB-INF/pages/multiDiscovery.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>multi</servlet-name>
    <url-pattern>/which2</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>otp</servlet-name>
    <jsp-file>/WEB-INF/pages/otp.jsp</jsp-file>
  </servlet>
  <servlet-mapping>
    <servlet-name>otp</servlet-name>
    <url-pattern>/otp</url-pattern>
  </servlet-mapping>
	<servlet>
    <servlet-name>consent</servlet-name>
    <jsp-file>/WEB-INF/pages/consent.jsp</jsp-file>
		<init-param>
      <param-name>AUTO_APPROVAL</param-name>
      <param-value>true</param-value>
   </init-param>
  </servlet>
  <servlet-mapping>
    <servlet-name>consent</servlet-name>
    <url-pattern>/consent</url-pattern>
  </servlet-mapping>
  <welcome-file-list>
    <welcome-file>/which</welcome-file>
  </welcome-file-list>
  <listener>
    <listener-class>bka.iam.platform.access.idp.ContextLoader</listener-class>
  </listener>
</web-app>
