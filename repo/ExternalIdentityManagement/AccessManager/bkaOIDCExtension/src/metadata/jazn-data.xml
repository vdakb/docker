<?xml version="1.0" encoding="UTF-8"?>
<jazn-data>
  <jazn-policy>
    <!-- Start OAM Snippet -->
    <grant>
      <grantee>
        <codesource>
          <url>file:${oracle.deployed.app.dir}/oidc.extension.access.module${oracle.deployed.app.ext}</url>
        </codesource>
      </grantee>
      <permissions>
        <permission>
          <class>oracle.security.jps.service.credstore.CredentialAccessPermission</class>
          <name>context=SYSTEM,mapName=oracle.oam.OAMStore,keyName=*</name>
          <actions>read</actions>
        </permission>
        <permission>
          <class>oracle.security.jps.service.credstore.CredentialAccessPermission</class>
          <name>context=SYSTEM,mapName=OAM_STORE,keyName=*</name>
          <actions>read,write,delete</actions>
        </permission>
        <permission>
          <class>oracle.security.jps.service.credstore.CredentialAccessPermission</class>
          <name>context=SYSTEM,mapName=OAM_SYSTEM_CONFIG,keyName=*</name>
          <actions>read</actions>
        </permission>
        <permission>
          <class>oracle.security.jps.service.credstore.CredentialAccessPermission</class>
          <name>context=SYSTEM,mapName=OAM_CONFIG,keyName=*</name>
          <actions>read</actions>
        </permission>
        <permission>
          <class>oracle.security.jps.service.credstore.CredentialAccessPermission</class>
          <name>context=SYSTEM,mapName=OSTS_CONFIG,keyName=*</name>
          <actions>read</actions>
        </permission>
        <permission>
          <class>oracle.security.jps.service.policystore.PolicyStoreAccessPermission</class>
          <name>context=APPLICATION,name=OAM11gApplication</name>
          <actions>*</actions>
        </permission>
        <!-- STS permissions start-->
        <permission>
          <class>oracle.security.jps.service.credstore.CredentialAccessPermission</class>
          <name>context=SYSTEM,mapName=STS,keyName=*</name>
          <actions>read</actions>
        </permission>
        <permission>
          <class>oracle.security.jps.service.credstore.CredentialAccessPermission</class>
          <name>credstoressp.credstore</name>
          <actions>read</actions>
        </permission>
        <permission>
          <class>oracle.security.jps.service.credstore.CredentialAccessPermission</class>
          <name>credstoressp.credstore.STS.*</name>
          <actions>read</actions>
        </permission>
        <permission>
          <class>oracle.security.jps.service.credstore.CredentialAccessPermission</class>
          <name>context=SYSTEM,mapName=oracle.wsm.security,keyName=*</name>
          <actions>read,write</actions>
        </permission>
        <!-- STS permissions end -->
        <!-- OIC permissions start-->
        <permission>
          <class>oracle.security.jps.service.credstore.CredentialAccessPermission</class>
          <name>context=SYSTEM,mapName=OIC_MAP,keyName=*</name>
          <actions>*</actions>
        </permission>
        <permission>
          <class>oracle.security.jps.service.keystore.KeyStoreAccessPermission</class>
          <name>stripeName=oamms,keystoreName=keystore,alias=*</name>
          <actions>*</actions>
        </permission>
        <permission>
          <class>oracle.security.jps.service.credstore.CredentialAccessPermission</class>
          <name>context=SYSTEM,mapName=OAMAgent,keyName=*</name>
          <actions>*</actions>
        </permission>
        <permission>
          <class>oracle.security.jps.service.trust.TrustServiceAccessPermission</class>
          <name>appId=*</name>
          <actions>issue,validate</actions>
        </permission>
        <!-- OIC permissions end-->
      </permissions>
    </grant>
    <grant>
      <grantee>
        <codesource>
          <url>file:${OAM_ORACLE_HOME}/../oic/config/mbeans/oic/rp_mbeans.jar</url>
        </codesource>
      </grantee>
      <permissions>
        <permission>
          <class>oracle.security.jps.service.audit.AuditStoreAccessPermission</class>
          <name>OIC</name>
          <actions>*</actions>
        </permission>
      </permissions>
    </grant>
    <grant>
      <grantee>
        <codesource>
          <url>file:${OAM_ORACLE_HOME}/../oic/config/mbeans/oic/oic_common.jar</url>
        </codesource>
      </grantee>
      <permissions>
        <permission>
          <class>oracle.security.jps.service.audit.AuditStoreAccessPermission</class>
          <name>OIC</name>
          <actions>*</actions>
        </permission>
      </permissions>
    </grant>
    <!-- End OAM snippet -->
  </jazn-policy>
</jazn-data>
